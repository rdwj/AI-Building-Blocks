# Environment variables for PGVector pipelines
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=postgres-pgvector.pgvector.svc.cluster.local
DB_PORT=5432
DB_NAME=vectordb
DB_USER=vectoruser
DB_PASSWORD=vectorpass

# Nomic Embed API
NOMIC_EMBED_URL=https://your-nomic-embed-url
NOMIC_EMBED_API_KEY=your-api-key
NOMIC_EMBED_MODEL_NAME=/mnt/models

# Llama 3.2 API
LLAMA_3_2_URL=https://your-llama-url
LLAMA_3_2_API_KEY=your-api-key
LLAMA_3_2_MODEL_NAME=llama-3-2-3b

# Docling API
DOCLING_URL=https://your-docling-url
DOCLING_API_KEY=your-api-key

# Pipeline Parameters
PROJECT_ID=demo_project
PROJECT_NAME=Demo Project
DOCUMENTS_DIR=/mnt/data/documents
RESULTS_FILE=/mnt/outputs/test_results.json

# Test Queries (JSON array)
TEST_QUERIES=["What is PGVector?", "How does hybrid search work?", "What are the benefits of RAG?"]

# Sparse Embedding Configuration
# SPARSE_METHOD: "bm25" (default, no additional dependencies) or "splade" (requires fastembed)
SPARSE_METHOD=bm25
# SPLADE_MODEL: Only used when SPARSE_METHOD=splade (requires: pip install fastembed)
# SPLADE_MODEL=prithivida/Splade_PP_en_v1
